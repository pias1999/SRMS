<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/welcome_note"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Welcome to SRMS"
        android:textColor="@color/black"
        android:textSize="60dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/faculty_loginb"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:background="@drawable/textview_borders"
        android:fontFamily="sans-serif"
        android:text="Continue as faculty"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="20dp"
        android:clickable="true"/>

    <TextView
        android:id="@+id/student_loginb"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/textview_borders"
        android:fontFamily="sans-serif"
        android:text="Continue as student"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="20dp"
        android:clickable="true"/>

</LinearLayout>